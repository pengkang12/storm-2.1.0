{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "zookeeper",
    "labels": {
      "name": "zookeeper"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "zookeeper",
        "image": "mattf/zookeeper",
        "ports": [
          {
            "containerPort": 2181
          }
        ],
        "resources": {
          "limits": {
            "cpu": "400m",
            "memory": "2Gi",
            "ephemeral-storage": "4Gi"
          }
        }
      }
    ],
    "nodeSelector": {
       "name" : "master"
    }
  }
}
