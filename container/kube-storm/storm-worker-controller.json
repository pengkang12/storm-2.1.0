{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "storm-worker-controller",
    "labels": {
      "name": "storm-worker"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "storm-worker"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "storm-worker",
          "uses": "nimbus"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "storm-worker",
            "image": "kevin2333/storm-worker:latest",
            "imagePullPolicy": "Always",
            "env": [
       	       {
    		"name": "TAG_NAME", 
      		"value": "core1"
               }
            ], 
            "ports": [
              {
                "name": "w6700",
                "containerPort": 6700
              },
              {
                "name": "w6701",
                "containerPort": 6701
              }
            ],
            "resources": {
              "limits": {
                "cpu": "400m"
              },
	      "requests":{
	      	"cpu": "400m"
	      }
            }
          }
        ]
      }
    }
  }
}
